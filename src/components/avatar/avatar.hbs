<div class="{{class}}__avatar">
    {{#if image}}
        <img
            class="{{class}}__img"
            src="{{image}}"
            alt="Аватар пользователя"
        />
    {{/if}}
    <div class="{{class}}__overlay" id="{{class}}__overlay">
        <p id="{{class}}__overlay">Поменять аватар</p>
    </div>
</div>
